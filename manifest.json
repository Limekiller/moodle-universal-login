{
  "name": "Universal Moodle Login",
  "version": "2.2.1",
  "description": "Log into any Moodle site, anywhere",

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": ["background/background.js"]
  },
  "permissions": ["webRequest", "notifications", "cookies", "<all_urls>"],

  "manifest_version": 2
}
